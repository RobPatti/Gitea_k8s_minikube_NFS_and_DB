apiVersion: v1
kind: PersistentVolume
metadata:
  name: postgres-pv-volume
  # * Create namespace before use POD 
  namespace: ns-gitea
  labels:
    type: local
    app: postgres
spec:
  storageClassName: manual
  capacity:
    storage: 7Gi
  accessModes:
    - ReadWriteMany
  hostPath:
    path: /mnt/data

